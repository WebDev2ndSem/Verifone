<Alloy>
	<Collection src="myDevices" />
	<Window class="container">
		<TableView id="table" dataCollection="myDevices">
            <TableViewSection id="sectionFruit" headerTitle="{deviceName}">
                <TableViewRow layout="horizontal" productId="{deficeId}">
                	<ImageView image="{deviceImage}" width="25%" />
	                <Label text="{deviceName}" width="25%" />
					<Label text="{deviceId}" width="25%"/>
					<Label text="{devicestatus}" width="25%"/>
                </TableViewRow>
              </TableViewSection>
        </TableView>
	</Window>
</Alloy>
